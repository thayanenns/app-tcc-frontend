<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:AppTccFrontend.NovaPasta1;assembly=AppTccFrontend"

             x:Class="AppTccFrontend.Pages.DetalhesMedicaoPage"
             
             Title="DetalhesMedicaoPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ConnversorBoolean x:Key="ConversorBoolean" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>
            <Label Text="{Binding DataDia, StringFormat='Data: {0:dd/MM/yyyy}'}"
               FontSize="20"
               HorizontalOptions="CenterAndExpand"
               Margin="0,10" />

            <CollectionView x:Name="MedicoesCollectionView"
                        ItemsSource="{Binding Medicoes}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Frame BackgroundColor="White"
                                   BorderColor="blue"
                                   CornerRadius="19"
                                   Padding= "10"
                                   Margin="20"
                                   HeightRequest="100"
                                   
                                   Grid.Row="0"
                                   Grid.Column="1">
                                <StackLayout>
                                    <Label Text="PressÃ£o Arterial"
                                           FontSize="18"
                                           HorizontalOptions="Center" />
                                    <Label FontSize="18" HorizontalOptions="Center" Padding="15">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding PressaoSistolica}" />
                                                <Span Text="/" />
                                                <Span Text="{Binding PressaoDiastolica}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>



                                </StackLayout>
                            </Frame>
                            
                            

                            <Frame BackgroundColor="White"
                                   BorderColor="Gray"
                                   CornerRadius="19"
                                   Padding= "10"
                                   Margin="20"
                                   HeightRequest="100"
                                   
                                   Grid.Row="1"
                                   Grid.Column="1">
                                <StackLayout>
                                    <Label Text= "Peso e Altura"
                                           FontSize="18"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding PressaoDiastolica}"
                                           FontSize="18"
                                           Padding="15"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="White"
                                   BorderColor="Gray"
                                   CornerRadius="19"
                                   Padding= "10"
                                   Margin="20"
                                   HeightRequest="100"
                                                                  
                                   Grid.Row="1"
                                   Grid.Column="0">
                                <StackLayout>
                                    <Label Text="Glicemia"
                                           FontSize="18"
                                           HorizontalOptions="Center" />
                                    <Label  Text="{Binding Glicemia}"
                                            FontSize="18"
                                            Padding="15"
                                            HorizontalOptions="Center" />
                                    <Label Text="Em Jejum?"
                                           FontSize="18"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding EmJejum, Converter={StaticResource ConversorBoolean}}"/>

                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="White"
                                   CornerRadius="19"
                                   Padding= "10"
                                   Margin="20"
                                   HeightRequest="100"
                                   Grid.Row="0"
                                   Grid.Column="0">
                                <StackLayout>
                                    <Label Text="Batimentos"
                                           FontSize="18"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Batimentos} "
                                           FontSize="18"
                                           Padding="15"
                                           HorizontalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
