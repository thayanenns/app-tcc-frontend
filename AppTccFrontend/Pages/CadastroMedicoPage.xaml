<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTccFrontend.Pages.CadastroMedicoPage"
             Title="Cadastro de MÃ©dico">
    <ScrollView>
        <StackLayout Margin="20">
            <Label HorizontalOptions="CenterAndExpand" Margin="0,0,0,20"/>

            <Entry Placeholder="Nome" x:Name="entNome" Margin="0,10,0,0"/>

            <DatePicker x:Name="entDtNascimento" Margin="0,10,0,0" />

            <Entry Placeholder="Sexo" x:Name="entSexo" Margin="0,10,0,0"/>

            <Entry Placeholder="Telefone" x:Name="entTelefone" Margin="0,10,0,0"/>

            <Entry Placeholder="Crm" x:Name="entCrm" Margin="0,10,0,0"/>


            <Entry Placeholder="Email" x:Name="entEmail" Margin="0,10,0,0"/>

            <Entry Placeholder="Senha" x:Name="entSenha" IsPassword="True" Margin="0,10,0,0"/>

          
            <Button Text="Salvar Paciente"
                    x:Name="SubmitBtn"
                    BackgroundColor="#3498db"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="5"
                    Clicked="SubmitClicked"
                    Margin="0,20,0,0"
                    HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ScrollView>
</ContentPage>
