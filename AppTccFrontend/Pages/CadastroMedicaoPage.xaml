<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTccFrontend.Pages.CadastroMedicaoPage"
             Title="Cadastro de medição">
    
    <StackLayout Padding="16">
        <Label Text="Informe os dados" FontSize="18" Margin="10" HorizontalOptions="CenterAndExpand" />

        <Entry Placeholder="Glicemia" x:Name="entGlicemia" Margin="15" />
        <Entry Placeholder="Pressão Sistólica" x:Name="entPressaoSistolica" />
        <Entry Placeholder="Pressão Diastólica" x:Name="entPressaoDiastolica" />

        <Label Text="Em Jejum?" FontSize="18" />
        <RadioButton Content="Sim" CheckedChanged="RadioButton_CheckedChanged" x:Name="rbSim"
/>
        <RadioButton Content="Não" CheckedChanged="RadioButton_CheckedChanged" x:Name="rbNao"/>

        <Button Text="Salvar" Clicked="OnSalvarClicked" />
    </StackLayout>

</ContentPage>