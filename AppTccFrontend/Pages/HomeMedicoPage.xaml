<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTccFrontend.Pages.HomeMedicoPage"
             Title="Lista de pacientes">

    <ListView x:Name="PacientesListView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame BackgroundColor="White"
                           BorderColor="Gray"
                           CornerRadius="10"
                           Margin="10">
                        <StackLayout Padding="10">

                            <Label Text="{Binding Nome}" FontSize="16" FontAttributes="Bold" />

                            <Label Text="{Binding Telefone}" FontSize="14" />
                            <Button x:Name="BtnAcompanhar"
                                    FontSize="13"
                                    Text="Acompanhar"
                                    Clicked="OnButtonClicked"
                                    CommandParameter="{Binding .}"
                                    HorizontalOptions="End"
                                    BackgroundColor="#233e95"
                                    TextColor="White"/>
                        </StackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>