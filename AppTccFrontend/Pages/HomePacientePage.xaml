<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTccFrontend.Pages.HomePacientePage"
             Title="HomePacientePage">
    <StackLayout>
        <ListView x:Name="DiasListView" ItemsSource="{Binding _medicoesPorDia}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BorderColor="Gray" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding DataDia, StringFormat='Data: {0:dd/MM/yyyy}'}"
                                       FontSize="18"
                                       HorizontalOptions="CenterAndExpand"
                                       Margin="0,10" />
                                <Button Text="Ver Medições" Clicked="OnDateSelected" CommandParameter="{Binding .}" />
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
